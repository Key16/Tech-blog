<div class="row">
  <div class="col-auto text-light">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6 fw-light ">
    <h3 class="text-light">Make a new post</h3>

    <form class="form new-blog-post p-3">
      <div class="form-group">
        <label for="blog-title">Blog title</label>
        <input class="form-input" type="text" id="blog-title" name="blog-title" />
      </div>

      <div class="form-group">
        <label for="blog-content">Tech tip</label>
        <textarea class="form-input" id="blog-content" name="blog-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Post</button>
      </div>
    </form>
  </div>



  {{#if blogs.length}}
  <div class="col-md-6 blog-list">
    <h3 class="text-light ">Previously posted</h3>

    {{#each blogs as |blog|}}



    <div class="card mx-3 mt-4 mb-3 fw-light">
      <div class="container">
        <div class="row ">
          <div class="col-lg-7 col-sm-12 p-0 fs-4" contenteditable="true" id="{{blog.id}}-blog-title">
            {{blog.title}}
          </div>

        </div>
      </div>
      <div class="card-body">
        <p class="card-text fs-4 p-2" id="{{blog.id}}-blog-content" contenteditable="true"> {{blog.content}}
        </p>
        <div class="row mb-2">
          <div class="col-md-2 col-s-4">
            <button class="btn btn-sm btn-danger" data-button="edit-btn" data-id="{{blog.id}}">UPDATE</button>
          </div>
          <div class="col-md-2 col-s-4">
            <button class="btn btn-sm btn-danger" data-button="delete-btn" data-id="{{blog.id}}">DELETE</button>
          </div>
        </div>
      </div>

    </div>

    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/dashboard.js"></script>